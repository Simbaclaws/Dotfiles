#!/bin/bash
sudo apt install nala
sudo nala update
sudo nala upgrade
sudo nala install git vim zsh qemu-kvm libvirt-clients libvirt-daemon-system bridge-utils virtinst libvirt-daemon build-essential libx11-dev libxft-dev libxinerama-dev libfreetype6-dev libfontconfig1-dev xrandr feh wireplumber pavucontrol 
sudo chsh -s $(which zsh) $USER
sudo snap install android-studio --classic
sudo snap install blender --classic
sudo snap install chromium
sudo snap install clion --classic
sudo snap install code --classic
sudo snap install color-picker
sudo snap install cups
sudo snap install darktable
sudo snap install datagrip --classic
sudo snap install dataspell --classic
sudo snap install dbeaver-ce
sudo snap install discord
sudo snap install figma-linux
sudo snap install firefox
sudo snap install foliate
sudo snap install goland --classic
sudo snap install inkscape
sudo snap install intellij-idea-ultimate --classic
sudo snap install keepassxc
sudo snap install kotlin --classic
sudo snap install obs-studio
sudo snap install phpstorm --classic
sudo snap install pycharm-professional --classic
sudo snap install remmina
sudo snap install rider --classic
sudo snap install rubymine --classic
sudo snap install rustrover --classic
sudo snap install shotcut --classic
sudo snap install signal-desktop
sudo snap install simplenote
sudo snap install slack
sudo snap install space --classic
sudo snap install webstorm --classic
sudo snap install whatsapp-for-linux
sudo cp ~/dwm.desktop /usr/share/xsessions/dwm.desktop
sudo cp ~/picom.conf /etc/xdg/picom.conf
cd ~/.config/suckless/dwm && make && sudo make clean install
cd ~/.config/suckless/st && make && sudo make clean install
cd ~/.config/suckless/dwmblocks && make && sudo make clean install
cd ~/.config/suckless/dmenu && make && sudo make clean install
