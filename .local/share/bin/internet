#!/bin/sh

# Show wifi ï€’ and percent strength or ó°¤‰ if none.
# Show ó°ˆ€ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "ó°ˆ€ Internet module" "\- Click to connect
âŒ: wifi disabled
ó°¤‰ : no wifi connection
ï€’ : wifi connection with quality
âŽ: no ethernet
ó°ˆ€ : ethernet working
ðŸ”’: vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Wifi
if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ] ; then
	wifiicon="$(awk '/^\s*w/ { print " ï€’ ", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ] ; then
	[ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ] && wifiicon=" ó°¤‰ " || wifiicon=" âŒ "
fi

# Ethernet
[ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] && ethericon=" ó°ˆ€ " || ethericon="âŽ"

# TUN
[ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ] && tunicon=" ðŸ”’"

printf "%s%s%s\n" "$wifiicon" "$ethericon" "$tunicon"
